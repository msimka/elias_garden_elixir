{
  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "cpu", 
      "pin_memory": true
    },
    "offload_param": {
      "device": "cpu",
      "pin_memory": true
    },
    "reduce_bucket_size": 500000,
    "allgather_bucket_size": 500000,
    "overlap_comm": true,
    "contiguous_gradients": true,
    "cpu_offload": true
  },
  "fp16": {
    "enabled": true,
    "auto_cast": false,
    "fp16_master_weights_and_grads": false,
    "loss_scale": 0,
    "loss_scale_window": 100,
    "hysteresis": 2,
    "min_loss_scale": 1,
    "initial_scale_power": 32
  },
  "gradient_accumulation_steps": 4,
  "train_micro_batch_size_per_gpu": 4,
  "gradient_clipping": 1.0,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 5e-6,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 5e-6,
      "warmup_num_steps": 100
    }
  },
  "wall_clock_breakdown": false,
  "memory_breakdown": false,
  "tensorboard": {
    "enabled": false,
    "output_path": "./logs/",
    "job_name": "uff_training"
  },
  "comms_logger": {
    "enabled": false
  },
  "flops_profiler": {
    "enabled": false,
    "profile_step": 1,
    "module_depth": -1,
    "top_modules": 1,
    "detailed": true,
    "warm_up": 10
  }
}